{
  "name": "empty",
  "version": "1.0.0",
  "description": "WordPress theme template.",
  "repository": "https://github.com/carolaine-vieira/wordpress-empty",
  "author": "Carolaine Vieira",
  "config": {
    "theme": "empty"
  },
  "license": "MIT-3",
  "devDependencies": {
    "node-sass": "^7.0.1",
    "parcel-bundler": "^1.12.5",
    "sass": "^1.42.1",
    "babel-eslint": "10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "2.22.1",
    "stylelint": "12.0.0",
    "stylelint-config-recommended-scss": "4.1.0",
    "stylelint-order": "4.0.0",
    "stylelint-scss": "3.13.0",
    "husky": "^4.2.0",
    "npm-run-all": "4.1.5"
  },
  "dependencies": {
    "autoprefixer": "^9.6.5",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^1.4.1"
  },
  "scripts": {
    "docker": "docker stop $(docker ps -a -q) && docker-compose up",
    "build": "parcel build ./wp-content/$npm_package_config_theme/assets/* --public-url ./",
    "dev": "parcel watch ./wp-content/$npm_package_config_theme/assets/* --public-url ./",
    "lint": "run-s -cl lint:scripts lint:styles",
    "lint:scripts": "eslint --color --ext .js ./wp-content/$npm_package_config_theme/assets/**/*.js --ignore-pattern **/node_modules/** --ignore-pattern **/build/*.js",
    "lint:styles": "stylelint --color ./wp-content/$npm_package_config_theme/assets/**/*.scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint"
    }
  }
}
